<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NutritionTrack" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="Widget.NutritionTrack.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="hintTextColor">@color/secondaryDarkColor</item>
        <item name="textAppearanceButton">?attr/textAppearanceSubtitle2</item>
        <item name="boxStrokeColor">@color/primaryDarkColor</item>
        <item name="boxBackgroundColor">@color/secondaryTextColor</item>
        <item name="errorTextColor">@color/colorError</item>
        <item name="boxStrokeErrorColor">@color/colorError</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/mid_margin</item>
        <item name="boxCornerRadiusBottomStart">@dimen/mid_margin</item>
        <item name="boxCornerRadiusTopEnd">@dimen/mid_margin</item>
        <item name="boxCornerRadiusTopStart">@dimen/mid_margin</item>
        <item name="android:layout_marginStart">@dimen/mid_margin</item>
        <item name="android:layout_marginEnd">@dimen/mid_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>

    </style>

    <style name="Widget.NutritionTrack.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/secondaryDarkColor</item>
        <item name="boxStrokeColor">@color/primaryDarkColor</item>
        <item name="boxBackgroundColor">@color/secondaryTextColor</item>
        <item name="endIconTint">@color/secondaryDarkColor</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/mid_margin</item>
        <item name="boxCornerRadiusBottomStart">@dimen/mid_margin</item>
        <item name="boxCornerRadiusTopEnd">@dimen/mid_margin</item>
        <item name="boxCornerRadiusTopStart">@dimen/mid_margin</item>
        <item name="android:layout_marginStart">@dimen/mid_margin</item>
        <item name="android:layout_marginEnd">@dimen/mid_margin</item>
        <item name="android:layout_marginBottom">@dimen/mid_margin</item>
    </style>

    <style name="Widget.NutritionTrack.outlinedButton" parent ="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="textAppearanceButton">?attr/actionButtonStyle</item>
        <item name="android:padding">@dimen/mid_margin</item>
        <item name="backgroundTint">@color/colorBackground</item>
        <item name="android:layout_margin">@dimen/large_margin</item>
        <item name="elevation">@dimen/border_dim</item>
        <item name="cornerRadius">@dimen/large_margin_dp</item>
    </style>

    <style name="Widget.NutritionTrack.ClickableText" parent ="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/secondaryDarkColor</item>
        <item name="textAppearanceButton">?attr/textAppearanceBody1</item>
        <item name="backgroundTint">@color/colorBackground</item>
        <item name="android:textSize">@dimen/mid_margin</item>
    </style>

    <style name="Widget.NutritionTrack.header1" parent ="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/secondaryDarkColor</item>
        <item name="android:textSize">@dimen/largest_margin</item>
        <item name="android:padding">@dimen/mid_margin_dp</item>
        <item name="android:layout_margin">@dimen/mid_margin_dp</item>
        <item name="backgroundTint">@color/colorBackground</item>
    </style>

    <style name="Widget.NutritionTrack.Toolbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/secondaryTextColor</item>
        <item name="titleTextColor">@color/primaryDarkColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>


    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="Widget.NutritionTrack.bottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/secondaryTextColor</item>
        <item name="elevation">12dp</item>
    </style>

</resources>